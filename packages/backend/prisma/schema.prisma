// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model RecallableProduct {
  id                 Int      @id @default(autoincrement())
  name               String
  manufacturer       String
  recall_date        DateTime
  recall_locations   String
  recall_reason      String
  additional_details String?
  alternatives       String?
}

model GeneralProduct {
  id   Int    @id @default(autoincrement())
  name String
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String
  password String
  Receipts Receipt[]
}

model Receipt {
  id          Int      @id @default(autoincrement())
  name        String
  input_date  DateTime
  total_value Float?
  owner       User     @relation(fields: [userId], references: [id])
  userId      Int
}

model ReceiptEntry {
  id    Int    @id @default(autoincrement())
  name  String
  qty   Int?
  price Float?
}
