// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model RecallableProduct {
  id                 String @id @unique
  name               String
  product_info       String
  recall_date        String
  problem            String
  food_safety_hazard String
  what_to_do         String
  image_url          String
  date_markings      String
  origin             String
}

model GeneralProduct {
  id   Int    @id @default(autoincrement())
  name String
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String
  password String
  Receipts Receipt[]
}

model Receipt {
  id          Int      @id @default(autoincrement())
  name        String
  input_date  DateTime
  total_value Float?
  owner       User     @relation(fields: [userId], references: [id])
  userId      Int
}

model ReceiptEntry {
  id    Int    @id @default(autoincrement())
  name  String
  qty   Int?
  price Float?
}
